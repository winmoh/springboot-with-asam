	@Check
	def checkNoCycleInEntityHierarchy(Entity entity) {
		if(entity.extends==null) {
			return 
			
		}
		val vistedEntities=new HashSet(entity)
		val current =entity.extends
		while(current!=null) {
			if(vistedEntities.contains(current)) {
				error ( " cycle in hierarchy of entity ' "+current . name* ",
						AsamPackage.elNSTANCE.entity_Extends);
				return
			}
			vistedEntities.add(current)
			current=current.extends
		}
		
		
		
		
	}
	
	
	
}
